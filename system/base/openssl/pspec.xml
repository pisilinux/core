        </AdditionalFiles>
        <BuildDependencies>
            <Dependency>zlib-devel</Dependency>
            <Dependency>xorg-util</Dependency>
            <Dependency>perl</Dependency>
            <Dependency>sed</Dependency>
        </BuildDependencies>
